{
  "name": "ffxiv-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:database": "jest tests/database",
    "test:database:watch": "jest tests/database --watch",
    "test:database:service": "jest tests/database/database.service.test.ts",
    "test:database:service:watch": "jest tests/database/database.service.test.ts --watch",
    "test:setup": "jest tests/setup",
    "test:utils"  : "jest tests/utils",
    "test:clients": "jest tests/clients",
    "test:helpers": "jest tests/setup/test-helpers.test.ts",
    "test:single": "jest --testNamePattern",
    "test:file": "jest --testPathPattern",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "ts-node src/database/seed.ts",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset"
  },
